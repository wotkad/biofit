.form
	padding 30px 0 35px
	background-color $green
	position relative
	&-bg
		position absolute
		left 0
		top -200px
	&__container
		display flex
		justify-content space-between
		&-item
			background-color #69A6DF
			padding 20px
			flex-basis calc(25% - 28px)
			display flex
			align-items center
			margin-right 28px
			justify-content center
			border-radius 10px 10px 10px 0
			position relative
			& span
				font-family $Bold
				font-size 1.125rem
				line-height 18px
				margin-right 13px
				color $white
			&:before
				content ''
				position absolute
				left -15px
				bottom 0
				border 10px solid transparent
				border-right 10px solid #69A6DF
				border-bottom 10px solid #69A6DF
		&-form
			flex-basis 75%
			display flex
			align-items center
			justify-content space-between
			&-input
				flex-basis calc(33% - 28px)
				margin-right 28px
				& input
					border 1px solid #DADADA
					background-color $white
					color rgba(49, 49, 49, 0.6)
					font-family $Regular
					line-height 16px
					border-radius 10px
					font-size 1rem
					width 100%
					padding 20px 30px
			&-button
				flex-basis calc(33% - 28px)
				margin-right 28px
				& button
					border 2px solid $white
					border-radius 30px
					cursor pointer
					font-family $Black
					font-size 1.125rem
					line-height 18px
					color $white
					padding 20px 0
					height 100%
					background transparent
					width 100%
					transition .3s
					&:hover
						color $green
						background-color $white
						border-color transparent
.success
	position fixed
	bottom 25px
	right 25px
	opacity 0
	z-index -1
	transition .3s
	padding 18px
	border-radius 4px
	box-shadow 0 0 40px rgba(49,49,49,0.1)
	background-color $green
	&__text
		font-family $Regular
		line-height 24px
		font-size 1.5rem
		color $white
	&-active
		z-index 9999
		opacity 1
@media(max-width:1170px)
	.form
		&-bg
			display none
@media(max-width:991px)
	.form
		padding 50px 0
		&__container
			flex-wrap wrap
			justify-content center
			&-item
				flex-basis auto
				width 220px
				margin-bottom 30px
				margin-right 0
			&-form
				flex-wrap wrap
				flex-basis 100%
				&-input
					flex-basis 100%
					margin-right 0
					margin-bottom 30px
				&-button
					flex-basis auto
					margin-right 0
					width 220px
@media(max-width:414px)
	.form
		&__container
			&-item
				width calc(100% - 15px)
				margin-left 15px
			&-form
				&-button
					width 100%
