.how
	padding 80px 0
	position relative
	&-line
		position absolute
		bottom -45px
		width 100%
		z-index 4
		left 0
		right 0
	&-bg1
		position absolute
		top -100px
		right -100px
		z-index 1
	&-bg2
		position absolute
		bottom -100px
		right 0
	&-bg3
		position absolute
		bottom 35%
		left -10px
	&-bg4
		position absolute
		bottom 0%
		left 50px
	&-bg5
		position absolute
		bottom 30%
		left 50px
	&__container
		z-index 2
		position relative
		&-title
			font-family $Black
			font-size 2.625rem
			line-height 53px
			color $text
			margin-bottom 50px
			text-align center
		&-items
			display flex
			justify-content center
			flex-wrap wrap
			&-item
				flex-basis 35%
				display flex
				align-items center
				justify-content space-between
				&:nth-child(1),
				&:nth-child(2)
					margin-bottom 20px
				.how__img
					flex-basis 30%
				.how__title
					flex-basis 60%
					& span
						font-family $Regular
						font-size 1.125rem
						color $text
						line-height 23px
						& a
							margin-left 3px
							color $green
							border-bottom 1px solid $green
							font-family $Medium
							transition .3s
							&:hover
								color $text
							& span
								display block
@media(max-width:1360px)
	.how
		&-bg1
			right auto
			left -100px
		&-bg3,
		&-bg4,
		&-bg5
			display none
@media(max-width:991px)
	.how
		padding 50px 0
		&-bg1
			transform scale(.7)
			top -140px
			left -120px
		&-line
			bottom -43px
		&__container
			&-title
				margin-bottom 30px
			&-items
				justify-content space-between
				&-item
					flex-basis 48%
@media(max-width:767px)
	.how
		&__container
			&-items
				flex-wrap wrap
				&-item
					justify-content center
					flex-basis 100%
					margin-bottom 30px
					.how__img
						flex-basis auto
						margin-right 25px
